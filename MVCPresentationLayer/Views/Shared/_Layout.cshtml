<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MVCPresentationLayer</title>
	<link rel="icon" href="~/favicon.ico" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/MVCPresentationLayer.styles.css" asp-append-version="true" />
	<script defer src="~/lib/jquery/dist/jquery.min.js"></script>
	<script defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	<script defer src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</head>
<body>
	<div class="toast-container mt-3 top-0 start-50 position-fixed translate-middle-x" style="z-index: 1050 !important">
		@if (ViewBag.ErrorMessage != null)
		{
			<div id="toastError" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
				<div class="toast-header bg-danger">
					<strong class="me-auto text-white h6 mb-0">Error</strong>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
				</div>
				<div class="toast-body mb-0 bg-danger" style="--bs-bg-opacity: 0.2">
					@ViewBag.ErrorMessage
				</div>
			</div>
		}

		@if (ViewBag.SuccessMessage != null)
		{
			<div id="toastSuccess" class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
				<div class="toast-header bg-success">
					<strong class="me-auto text-white h6 mb-0">Success</strong>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
				</div>
				<div class="toast-body mb-0 bg-success" style="--bs-bg-opacity: 0.2">
					@ViewBag.SuccessMessage
				</div>
			</div>
		}

	</div>
	<div class="d-flex flex-nowrap">
		<aside id="sidebar" style="max-width: 300px;" class="offcanvas offcanvas-start show-on-md">
			<div class="offcanvas-header">
				<a class="offcanvas-title text-primary text-decoration-none fw-bold" asp-controller="Home" asp-action="Index">Dashboard</a>
				<img src="~/icon.png" width="40" height="40" />
			</div>
			<div class="offcanvas-body" style="padding: 0px !important">
				@{
					await Html.RenderPartialAsync("_Sidebar");
				}
			</div>
		</aside>
		<div class="w-100 position-relative">
			<nav class="navbar navbar-light bg-white border-bottom">
				<div class="container-fluid justify-content-start gap-2">
					<img class="d-md-none" title="STA logo" src="~/icon.png" width="40" height="40" />
					<p class="navbar-brand mb-0" >@ViewData["Title"]</p>
					<div class="d-flex justify-content-end flex-grow-1">
						<button id="logout-btn" class="btn btn-danger">Log out</button>
						<button class="btn btn-outline-dark d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar">
							☰ Menu
						</button>
					</div>
				</div>
			</nav>
			<main role="main" class="p-3">
				@RenderBody()
			</main>
		</div>

	</div>
</body>
</html>
